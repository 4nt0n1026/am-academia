<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>AM_ACADEMIA_SPRING</display-name>
  
  <welcome-file-list>
    <welcome-file>/xhtml/home.xhtml</welcome-file>
  </welcome-file-list>
  
  <!-- JSF -->
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>com.sun.faces.writeStateAtFormEnd</param-name>
    <param-value>false</param-value>
  </context-param>
  
  <!-- PRIMEFACES THEME -->
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>home</param-value>
  </context-param>
  
  <!-- FILE UPLOAD -->
  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>
	        org.primefaces.webapp.filter.FileUploadFilter
	    </filter-class>
    <init-param>
      <param-name>thresholdSize</param-name>
      <param-value>51200</param-value>
    </init-param>
    <init-param>
      <param-name>uploadDirectory</param-name>
      <param-value>/home/christian</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
  
  <!-- LISTENER DE TEMPO DE EXECUCAO -->
  <listener>
    <listener-class> 
            org.springframework.web.context.ContextLoaderListener 
        </listener-class>
  </listener>
  <filter>
    <filter-name>cronometro</filter-name>
    <filter-class>
        br.com.acad.filter.FiltroTempoDeExecucao
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>cronometro</filter-name>
    <url-pattern>/xhtml/*</url-pattern>
  </filter-mapping>
  
  <!-- LISTENER JSF -->
  <listener><listener-class>com.sun.faces.config.ConfigureListener</listener-class></listener>
  
  <!-- REST -->
  <servlet> 
  	<servlet-name>Jersey REST Service</servlet-name> 
  	<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
  	<init-param> 
  		<param-name>com.sun.jersey.config.property.packages</param-name> 
  		<param-value>br.com.acad.ws</param-value> 
  	</init-param> 
  	<load-on-startup>1</load-on-startup> 
  </servlet>
  <servlet-mapping> 
  	<servlet-name>Jersey REST Service</servlet-name> 
  	<url-pattern>/rest/*</url-pattern> 
  </servlet-mapping>
  
</web-app>