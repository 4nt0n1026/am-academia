package br.com.acad.model.dieta;

import java.io.Serializable;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.JoinColumn;
import javax.persistence.ManyToOne;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;

@SuppressWarnings("serial")
@Entity
@SequenceGenerator(name="seqItemRefeicao", sequenceName="SEQ_ITEM_REFEICAO", allocationSize=1)
@Table(name="ACAD_ITEM_REFEICAO")
public class ItemRefeicao implements Serializable {

	@Id
	@GeneratedValue(strategy=GenerationType.SEQUENCE, generator="seqItemRefeicao")
	private int id;
	
	@Column(precision=2, nullable=false)
	private double quantidade;
	
	@ManyToOne
	@JoinColumn(name="ALIMENTO_ID")
	private Alimento alimento;
	
	public ItemRefeicao(){}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public double getQuantidade() {
		return quantidade;
	}

	public void setQuantidade(double quantidade) {
		this.quantidade = quantidade;
	}

	public Alimento getAlimento() {
		return alimento;
	}

	public void setAlimento(Alimento alimento) {
		this.alimento = alimento;
	}
	
	
	
	
}
