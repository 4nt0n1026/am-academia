<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".NoticiasDetalheActivity" >

    <TextView
        android:id="@+idNoticiasDetalhe/nome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/titulo_background"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/titulo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+idNoticiasDetalhe/data"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@color/main_section" 
            android:gravity="center_horizontal"/>
        
        <TextView
            android:id="@+idNoticiasDetalhe/categoria"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="@color/main_section" 
            android:gravity="center_horizontal"/>
        
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/section"
        android:text="@string/descricao" />

    <TextView
        android:id="@+idNoticiasDetalhe/descricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>